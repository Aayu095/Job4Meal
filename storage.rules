rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Task proof photos
    match /task-proofs/{taskId}/{filename} {
      allow read: if true; // Public read for verification
      allow write: if request.auth != null;
    }
    
    // User profile photos
    match /user-photos/{userId}/{filename} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Organization logos
    match /org-logos/{orgId}/{filename} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
